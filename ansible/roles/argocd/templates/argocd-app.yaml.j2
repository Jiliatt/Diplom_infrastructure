apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: diplom-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/Jiliatt/Diplom_app.git
    targetRevision: feature/k8s-deploy
    path: helm/
  destination:
    server: https://kubernetes.default.svc
    namespace: diplom
  syncPolicy:
    automated:
      prune: true
      selfHeal: true

